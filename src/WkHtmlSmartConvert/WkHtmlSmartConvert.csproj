<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>WkHtmlSmartConvert</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Label="Nuget Pack">
    <PackageId>WkHtmlWkHtmlSmartConvert</PackageId>
    <PackageVersion>0.1.0</PackageVersion>
    <Title>Best wrapper of wkhtmltopdf library</Title>
    <Description>This package implements the library wkhtmltopdf, working in windows e linux.</Description>
    <PackageDescription>This package implements the library wkhtmltopdf, working in windows e linux.</PackageDescription>
    <Authors>rafaelmsouza</Authors>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <!--<PackageIcon>Empty</PackageIcon>-->
    <PackageProjectUrl>https://github.com/rafaelmsouza/WkHtmlSmartConvert</PackageProjectUrl>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageTags>wkhtmltopdf;html;pdf</PackageTags>
    <RepositoryUrl>RepositoryType</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>


  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup Label="wkhtmltopdf">
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\linux-x64\native\libwkhtmltox.so" Pack="true" PackagePath="runtimes\linux-x64\native">
      <Visible>false</Visible>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>runtimes\linux-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\linux-x64\native\wkhtmltopdf" Pack="true" PackagePath="runtimes\linux-x64\native">
      <Visible>false</Visible>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>runtimes\linux-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\win-x64\native\wkhtmltopdf.exe" Pack="true" PackagePath="runtimes\win-x64\native">
      <Visible>false</Visible>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>runtimes\win-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\win-x64\native\wkhtmltox.dll" Pack="true" PackagePath="runtimes\win-x64\native">
      <Visible>false</Visible>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>runtimes\win-x64\native\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
    <!--<None Include="..\WkHtmlSmartConvert.Embedded\runtimes\win-x64\native\wkhtmltox.dll" Pack="true" PackagePath="runtimes\win-x64\native">
      <Visible>false</Visible>
    </None>-->
  </ItemGroup>

</Project>
