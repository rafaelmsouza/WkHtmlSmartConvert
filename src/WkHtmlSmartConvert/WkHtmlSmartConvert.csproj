<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1</TargetFrameworks>
    <RootNamespace>WkHtmlSmartConvert</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1591</NoWarn>    
  </PropertyGroup>

  <PropertyGroup Label="Nuget Pack">
    <PackageId>WkHtmlSmartConvert</PackageId>
    <PackageVersion>0.2.1</PackageVersion>
    <Title>Best wrapper of wkhtmltopdf library</Title>
    <Description>This package implements the library wkhtmltopdf, working in windows e linux.</Description>
    <PackageDescription>This package implements the library wkhtmltopdf, working in windows e linux.</PackageDescription>
    <Authors>rafaelmsouza</Authors>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <PackageIcon>assets\icon.png</PackageIcon>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageTags>wkhtmltopdf;html;pdf</PackageTags>
    <RepositoryUrl>https://github.com/rafaelmsouza/WkHtmlSmartConvert</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="build\**" />
    <EmbeddedResource Remove="build\**" />
    <None Remove="build\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="3.1.9" />
  </ItemGroup>

  <ItemGroup Label="icon">
    <None Include="..\..\assets\icon.png">
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>assets</PackagePath>
    </None>  
  </ItemGroup>

  <ItemGroup Label="wkhtmltopdf">
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\linux-x64\native\libwkhtmltox.so">
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux-x64\native</PackagePath>
    </None>
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\linux-x64\native\wkhtmltopdf">
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux-x64\native</PackagePath>
    </None>
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\win-x64\native\wkhtmltopdf.exe">
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\win-x64\native</PackagePath>
    </None>
    <None Include="..\WkHtmlSmartConvert.Embedded\runtimes\win-x64\native\wkhtmltox.dll">
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\win-x64\native</PackagePath>
    </None>
  </ItemGroup>

</Project>
